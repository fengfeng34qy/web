.navbar.navbar-default
    .container
        .navbar-header
            a.navbar-brand(href="/", title="孙锋锋的网络日志")
                img(src="/images/logo.png")
        if user
            p#login_in.navbar-text.navbar-right
                span#username(style="display:none") #{user.name}
                span 欢迎您,#{user.nickname}
                span &nbsp;|&nbsp;
                a.navbar-link(href="/logout") 退出
        else
            p#login_out.navbar-text.navbar-right
                a.navbar-link(href="javascript:;", data-toggle="modal",data-target="#signinModal") 登录
                span &nbsp;|&nbsp;
                //a.navbar-link(href="#", data-toggle="modal",data-target="#signupModal") 注册
                a#loginBtn.navbar-link(href="javascript:;") 注册
#signinModal.modal.fade
    .modal-dialog
        .modal-content
            .modal-header 登录
            .modal-body
                .form-group
                    label(for="signinName") 用户名
                    input#signinName.form-control(name="user[name]", type="text")
                    div#userWran(style="color:red;")
                .form-group
                    label(for="signinPassword") 密码
                    input#signinPassword.form-control(name="user[password]", type="password")
                    div#pwdWran(style="color:red;")
            .modal-footer
                button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                button#signin.btn.btn-success(type="submit") 提交
#signupModal.modal.fade
    .modal-dialog
.backtop TOP
